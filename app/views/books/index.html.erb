<% if @book.errors.any? %>
  <%= @book.errors.count %>error prohibited this obj from being saved:
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
<% end %>


<div class="container">
  <div class="row">

    <!--部分テンプレート化！-->
    <%= render 'layouts/profile_bookpost', user: @user, book: @book %>


    <!--投稿一覧自分のと他者の！！-->
    <div class="col-md-9">
    <table class="table">
      <thead>
        <h2>Books</h2>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>

      <% @books.each do |book| %>
      <tbody>
        <tr>
          <td><%= image_tag book.get_image(100, 100) %></td>
          <!--以下本のタイトルからbook詳細ページbook_pathに遷移-->
          <!--リンクになってない、のち修正！！-->
          <%= link_to book_path(book.id) do %>
            <td><%= book.title %></td>
          <% end %>
          <td><%= book.body %></td>
        </tr>
      <% end %>
      </tbody>

    </table>
    </div>

  </div>
</div>
