<!--自身の情報-->
<h1>User info</h1>
<%= image_tag @user.get_profile_image(100,100) %>

<p>name<%= @user.name %></p>
<p>introduction<%= @user.introduction %></p>


<!--投稿フォーム-->
<h3>New book</h3>
<%= form_with model: @book do |f| %>
  <h5>Title</h5>
  <%= f.text_field :title %>
  <h5>Opinion</h5>
  <%= f.text_area :body %>

  <%= f.submit "Create book" %>
<% end %>
<!--ここまで共通-->


<!--投稿詳細-->
<h3>Book detail</h3>
<%= image_tag book.image(100,100) %>
<%= book.title %>
<%= book.body %>
<%= link_to "Edit", edit_book_path %>
<%= link_to "Destroy", book_path, method: :destroy %>