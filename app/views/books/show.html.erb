<div><%= flash[:notice] %></div>


<div class="container">
  <div class="row">
    <!--部分テンプレート化！-->
    <%= render 'layouts/profile_bookpost', user: @user, book: @book %>


    <!--投稿詳細-->
    <div class="col-md-8 offset-md-1">
      <div class="mt-3">
        <h3>Book detail</h3>
      </div>

      <table class="table">
        <tbody>
          <tr>
            <td>
            <%= image_tag @book.get_image(100, 100) %>
              <%= link_to user_path(@user.id) do %><br />
              <%= @user.name %>
            <% end %>
            </td>

            <td>
            <%= link_to book_path do %>
              <%= @book.title %>
            <% end %>
            </td>

            <td><%= @book.body %></td>

        <!--本人にのみ本の編集/削除権限を与える-->
            <% if @user == current_user %>
              <td>
                <div class="btn btn-sm btn-success text-white">
                  <%= link_to "Edit", edit_book_path %>
                </div>
              </td>
              <td>
                <div class="btn btn-sm btn-danger text-white">
                  <%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %>
                </div>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>

