<div><%= flash[:notice] %></div>


<!--部分テンプレート化！-->
<%= render 'layouts/profile_bookpost', user: @user, book: @book %>


<!--自身の投稿一覧-->
<h3>Books</h3>
<p>Title</p>
<p>Opinion</p>
<% @books.each do |book| %>
  <%= image_tag book.get_image(100, 100) %>

  <%= link_to book_path(book.id) do %>
    <%= book.title %>
  <% end %>

  <%= book.body %>
<% end %>