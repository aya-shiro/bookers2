<div><%= flash[:notice] %></div>

<div class="container">
  <div class="row">
<!--部分テンプレート化！-->
  <%= render 'layouts/profile_bookpost', user: @user, book: @book %>


<!--自身の投稿一覧-->
<div class="col-md-8 offset-md-1">
  <div class="mt-3">
    <h2>Books</h2>
  </div>
  <table class="table table-hover table-inverse">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>

  <% @books.each do |book| %>
  <tbody>
      <td><%= image_tag book.get_image(100, 100) %></td>

      <td>
      <%= link_to book_path(book.id) do %>
        <%= book.title %>
      <% end %>
      </td>

      <td><%= book.body %></td>
    <% end %>
  </tbody>
  </table>
</div>

  </div>
</div>